# Dockerfile.dev â€“ for local development with hot reload

FROM python:3.10-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    git \
    libgl1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir --default-timeout=1000 -r requirements.txt

# Code will usually be mounted as a volume in docker-compose.dev.yml,
# but we copy once so container can start even without a volume.
COPY rag_app ./rag_app
COPY models ./models
COPY pdf_kb_files ./pdf_kb_files
COPY .env ./rag_app

ENV PYTHONPATH=/app/rag_app \
    PYTHONUNBUFFERED=1 \
    FLASK_APP=run.py \
    FLASK_ENV=development \
    TRANSFORMERS_OFFLINE=1

EXPOSE 5000

CMD ["flask", "run", "--host=0.0.0.0", "--port=5000"]
